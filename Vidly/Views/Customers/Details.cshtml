@model Vidly.Models.Customer
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<h3>
    <ul>
        <li>Membershp Type: @Model.MembershipType.Name</li>
        @if (Model.Birthdate != null)
        {
            <li>Birthdate: @Model.Birthdate.Value.Date.ToShortDateString()</li>
        }
        
    </ul>
</h3>



