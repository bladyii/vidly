@using Vidly.Models
@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<hr />
<table id="movies" class="table table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genres</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"                  
                    },
                    {
                        data: "genre",
                        render: function (data) {
                            return data.type
                        }
                    }

                ]

            });
        })
    </script>


}